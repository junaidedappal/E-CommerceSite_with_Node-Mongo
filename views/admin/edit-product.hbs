<section>
    <div class="container">
        
        <div class="col-md-6">
            <h3 class="text-center mt-4 " style="color:#c8c8c8;">Edit Product</h3>
            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data" >
                <label for="">Name</label>
                <input type="text" class="form-control" name="Name" value="{{product.Name}}">

                <label for="">Category</label>
                <input type="text" class="form-control" name="Category" value="{{product.Category}}">

                <label for="">Price</label>
                <input type="number" class="form-control" name="Price" value="{{product.Price}}>


                <label for="">Discription</label>
                <input type="text" class="form-control" name="Discription" value="{{product.Discription}}">
                <label for="">Image</label>
                <img class="mt-3" src="/product-images/{{product._id}}.jpg" style="width:100px;height:auto;" id="imgview" alt="">
                <input type="file" class="form-control-plaintext" name="Image" onchange="viewImage(event)">
                <button type="submit" class="btn btn-primary mt-4 text-center "  style="margin-left:10px;">Submit</button>
            </form>            
        </div>
    </div>
</section>
<script>
    function viewImage(event){
    document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
    }
</script>