<section>
    <div class="container">
        
        <div class="col-md-6">
            <h3 class="text-center mt-4 " style="color:#c8c8c8;">Add Product</h3>
            <form action="/admin/add-product" method="post" enctype="multipart/form-data" >
                <label for="">Name</label>
                <input type="text" class="form-control" name="Name">

                <label for="">Category</label>
                <input type="text" class="form-control" name="Category">

                <label for="">Price</label>
                <input type="number" class="form-control" name="Price">


                <label for="">Discription</label>
                <input type="text" class="form-control" name="Discription">
                <label for="">Image</label>
                <input type="file" class="form-control-plaintext" name="Image">
                <button type="submit" class="btn btn-primary mt-4 text-center " style="margin-left:10px;">Submit</button>
            </form>
            
        </div>
    </div>
</section>