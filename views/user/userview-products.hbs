   <style>
        .animate-charcter {
          text-transform: uppercase;
          background-image: linear-gradient(-225deg,
              #231557 0%,
              #44107a 29%,
              #ff1361 67%,
              #fff800 100%);
          background-size: auto auto;
          background-clip: border-box;
          background-size: 200% auto;
          color: #fff;
          background-clip: text;
          text-fill-color: transparent;
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          animation: textclip 2s linear infinite;
          display: inline-block;
        }

        @keyframes textclip {
          to {
            background-position: 200% center;
          }
        }
        .geeks:hover {
        transform: scale(1.3);
        }
        .geeks1:hover {
        transform: scale(1);
        }
      </style>

<section>
  <div class="container mt-4">
    <div class="row" style="background: rgba(252, 255, 255, 0.976);">
     
      <h5 class="text-warning animate-charcter">Smart-Phones</h5>
      {{#each products}}
      <div class="col-md-4 col-6 col-lg-3 col-xl-2 p-3">
        <div class="card geeks1" style="-webkit-box-shadow: 10px 10px 12px #b3b3b3;">
          <div class="text-center pt-2 ">
            <img class="card-img-top geeks" src="/product-images/{{this._id}}.jpg" alt="Card image cap"
              style="width:fit-content; height:120px; ">
          </div>
          <div class="card-body ">
            <h5 class="card-title" style="font-size:smaller;">{{this.Name}}</h5>
            <p class="" style="font-size: smaller;">price : <span style="font-weight:500;">â‚¹ {{this.Price}} </span>
              <br>model : {{this.Category }}<br>
              <span class="" style="font-size: xx-small;"> {{this.Discription}}</span><br>

              {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary " style="font-size: xx-small;">Add to
                cart</a> --}}
              <button class="btn btn-primary" style="font-size: xx-small;" onclick="addToCart('{{this._id}}')">Add To
                Cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
